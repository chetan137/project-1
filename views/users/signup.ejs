<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h2 class="offset-3 col-6">SignUp KAJWA</h2>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-lebel">Username</label>
                    <input name="username" id="username" class="form-control" type="text" required />
                    <div class="valid-feedback">Looks good!</div>


                </div>
                <div class="mb-3">
                    <label for="email" class="form-lebel">Email</label>
                    <input type="email" name="email" id="email" class="form-control" type="text" required />



                </div>
                <div class="mb-3">
                    <label for="password" class="form-lebel">Password</label>
                    <input name="password" id="password" class="form-control" type="password" required />



                </div>
                <button class="btn btn-primary">SingUp</button>

            </form>
            <!-- <hr>
            <hr>
            <a href="/auth/google">
                <button class="btn btn-danger">Sign Up with Google</button>
            </a> -->

        </div>
    </div>
